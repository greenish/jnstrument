{
  "manifest_version": 2,

  "name": "jnstrument",
  "description": "Realtime JavaScript Visualization",
  "version": "0.1.2",
  "background": {
     "persistent": true,
     "scripts": [
        "backgroundScript.js"
      ]
  },
  "content_scripts" : [
    {
      "js": ["contentScript.js"],
      "run_at" : "document_end",
      "matches" : ["http://*/*", "file://*/*"]
    }
  ],
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "inactive.png",
    "default_popup": "popup.html",
    "default_title": "jnstrument"
  },

  "requirements": {
    "3D": {
      "features": ["webgl"]
    }
  },

  "minimum_chrome_version" : "28"
}