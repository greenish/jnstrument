{
  "manifest_version": 2,

  "name": "jnstrument",
  "description": "A glance behind the curtains of a web browser",
  "version": "0.1",
  "background": {
     "persistent": true,
     "scripts": [
       "jnstrument.js"
//        "popup.js"
      ]
  },
  "content_scripts" : [
    {
      "js": ["inject.js"],
      "run_at" : "document_end",
      "matches" : ["http://*/*", "file://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "tabs",
    "debugger",
    "file://*/*",   
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources" : [
    "pca__ProxyInstrumentES5chrome.js"
  ],
  "browser_action": {
    "default_icon": "inactive.png"
//    "debugPopu": "debugPopup.html"

  }
}