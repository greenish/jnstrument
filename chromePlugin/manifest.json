{
  "manifest_version": 2,

  "name": "jnstrument",
  "description": "A glance behind the curtains of a web browser",
  "version": "0.1.1",
  "background": {
     "persistent": true,
     "scripts": [
        "backgroundScript.js"
      ]
  },
  "content_scripts" : [
    {
      "js": ["contentScript.js"],
      "run_at" : "document_end",
      "matches" : ["http://*/*", "file://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "tabs",
    "debugger",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "inactive.png",
    "default_popup": "popup.html",
    "default_title": "jnstrument"
  }
}